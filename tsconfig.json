{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2018",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "noUnusedParameters": true
  },
  "include": ["packages/"],
  "exclude": ["node_modules", "packages/*/dist"]
}